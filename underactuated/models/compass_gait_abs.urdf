<?xml version="1.0" ?>

<robot name="compass_gait">

  <!-- ground -->
  <!-- just for visualization, it is welded to world -->

  <link name="ground">

    <visual>
      <origin xyz="0 0 -.25" rpy="0 0 0"/>
      <geometry>
        <box size="10 1 .5" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>

  </link>

  <joint name="ground_is_world" type="fixed">

    <parent link="world" />
    <child link="ground" />
    <!-- slope of the ramp here -->
    <origin xyz="0 0 0" rpy="0 .0525 0"/>

  </joint>

  <!-- floating base for the body -->

  <link name="floating_base_x" />

  <joint name="floating_base_x" type="prismatic">

    <parent link="ground"/>
    <child link="floating_base_x"/>
    <axis xyz="1 0 0"/>

  </joint>

  <!-- body -->

  <link name="body">

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="10"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <sphere radius=".1"/>
      </geometry>
      <material>
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

  </link>

  <joint name="floating_base_z" type="prismatic">

    <parent link="floating_base_x"/>
    <child link="body"/>
    <axis xyz="0 0 1"/>

  </joint>

  <!-- stance leg -->

  <link name="stance_leg">

    <inertial>
      <origin xyz="0 0 -.5"/>
      <mass value="1"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -.5"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
      <material>
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 -.5"/>
      <geometry>
        <cylinder length="1" radius=".01"/>
      </geometry>
      <material>
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

  </link>

  <joint name="stance_hip" type="continuous">

    <parent link="body"/>
    <child link="stance_leg"/>
    <axis xyz="0 -1 0"/>

  </joint>

  <!-- swing leg -->

  <link name="swing_leg">

    <inertial>
      <origin xyz="0 0 -.5"/>
      <mass value="1"/>
    </inertial>

    <visual>
      <origin xyz="0 0 -.5"/>
      <geometry>
        <sphere radius=".05"/>
      </geometry>
      <material>
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 -.5"/>
      <geometry>
        <cylinder length="1" radius=".01"/>
      </geometry>
      <material>
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

  </link>

  <joint name="swing_hip" type="continuous">

    <parent link="body"/>
    <child link="swing_leg"/>
    <axis xyz="0 -1 0"/>

  </joint>

</robot>
